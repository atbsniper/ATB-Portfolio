        // Terminal functionality
        function terminal() {
            return {
                command: '',
                isProcessing: false,
                commandHistory: [],
                historyIndex: -1,
                
                executeCommand() {
                    if (!this.command.trim() || this.isProcessing) return;
                    
                    const cmd = this.command.trim().toLowerCase();
                    this.commandHistory.push(cmd);
                    this.historyIndex = -1;
                    
                    // Add command to output
                    this.addOutput(`<span class="text-green-400">aitsam@portfolio:~$</span> ${this.command}`, 'command');
                    
                    this.isProcessing = true;
                    
                    // Simulate processing delay
                    setTimeout(() => {
                        this.processCommand(cmd);
                        this.isProcessing = false;
                        this.command = '';
                    }, 300);
                },
                
                processCommand(cmd) {
                    let output = '';
                    
                    switch(cmd) {
                        case 'help':
                            output = `
                                <div class="text-yellow-400 font-bold">Available Commands:</div>
                                <div class="grid grid-cols-2 gap-2 mt-2">
                                    <div><span class="text-green-400">help</span> - Show this help</div>
                                    <div><span class="text-blue-400">about</span> - About Aitsam</div>
                                    <div><span class="text-purple-400">skills</span> - Technical skills</div>
                                    <div><span class="text-yellow-400">projects</span> - Featured projects</div>
                                    <div><span class="text-red-400">contact</span> - Contact info</div>
                                    <div><span class="text-gray-400">clear</span> - Clear terminal</div>
                                    <div><span class="text-gray-400">exit</span> - Exit terminal</div>
                                </div>
                            `;
                            break;
                            
                        case 'about':
                            output = `
                                <div class="text-cyan-400 font-bold">About Aitsam Tariq Bajwa</div>
                                <div class="mt-2">
                                    <div>üéØ CyberSecurity & Web3 Developer</div>
                                    <div>üìç Based in Islamabad, Pakistan</div>
                                    <div>üíª Passionate about secure, scalable applications</div>
                                    <div>ÔøΩÔøΩ Currently learning Web3, Ethereum, and Go</div>
                                    <div>üõ°Ô∏è Expertise in Solidity, C++, and security tools</div>
                                </div>
                            `;
                            break;
                            
                        case 'skills':
                            output = `
                                <div class="text-purple-400 font-bold">Technical Skills</div>
                                <div class="mt-2">
                                    <div><span class="text-green-400">Languages:</span> C++, Solidity, JavaScript, Python, PHP</div>
                                    <div><span class="text-blue-400">Web3:</span> Smart Contracts, DeFi, DApps, Web3.js</div>
                                    <div><span class="text-yellow-400">Security:</span> Penetration Testing, Security Auditing</div>
                                    <div><span class="text-red-400">Full-Stack:</span> React, Node.js, MySQL, LEMP Stack</div>
                                    <div><span class="text-cyan-400">DevOps:</span> AWS, Docker, CI/CD, Server Management</div>
                                </div>
                            `;
                            break;
                            
                        case 'projects':
                            output = `
                                <div class="text-yellow-400 font-bold">Featured Projects</div>
                                <div class="mt-2 space-y-2">
                                    <div><span class="text-green-400">1.</span> OneBlock - Instructor Portal (React, Firebase, Solidity)</div>
                                    <div><span class="text-green-400">2.</span> iLoveJPEG - File Converter (React, Node.js, Image Processing)</div>
                                    <div><span class="text-green-400">3.</span> TrackWithTurtle - Job Tracker (React, Node.js, MongoDB)</div>
                                    <div><span class="text-green-400">4.</span> Sentiment Analysis Tool (Python, ML, NLP)</div>
                                </div>
                            `;
                            break;
                            
                        case 'contact':
                            output = `
                                <div class="text-red-400 font-bold">Contact Information</div>
                                <div class="mt-2">
                                    <div><span class="text-green-400">üìß Email:</span> aitasamtbajwa@gmail.com</div>
                                    <div><span class="text-blue-400">üêô GitHub:</span> github.com/atbsniper</div>
                                    <div><span class="text-cyan-400">üíº LinkedIn:</span> linkedin.com/in/aitsam-tariq-bajwa</div>
                                    <div><span class="text-pink-400">üì∏ Instagram:</span> instagram.com/atbsniper</div>
                                </div>
                            `;
                            break;
                            
                        case 'clear':
                            document.getElementById('terminal-output').innerHTML = '';
                            return;
                            
                        case 'exit':
                            output = '<div class="text-red-400">Terminal session ended. Thanks for visiting!</div>';
                            break;
                            
                        default:
                            if (cmd.includes('help') || cmd.includes('about') || cmd.includes('skills') || 
                                cmd.includes('projects') || cmd.includes('contact') || cmd.includes('clear') || 
                                cmd.includes('exit')) {
                                output = `<div class="text-yellow-400">Did you mean: ${this.getClosestCommand(cmd)}?</div>`;
                            } else {
                                output = `<div class="text-red-400">Command not found: ${cmd}</div><div class="text-gray-400">Type 'help' for available commands.</div>`;
                            }
                    }
                    
                    this.addOutput(output, 'output');
                },
                
                getClosestCommand(cmd) {
                    const commands = ['help', 'about', 'skills', 'projects', 'contact', 'clear', 'exit'];
                    for (let command of commands) {
                        if (command.includes(cmd) || cmd.includes(command)) {
                            return command;
                        }
                    }
                    return 'help';
                },
                
                addOutput(content, type) {
                    const outputDiv = document.getElementById('terminal-output');
                    const newLine = document.createElement('div');
                    newLine.innerHTML = content;
                    newLine.className = type === 'command' ? 'mb-2' : 'mb-4';
                    outputDiv.appendChild(newLine);
                    outputDiv.scrollTop = outputDiv.scrollHeight;
                },
                
                // Handle arrow keys for command history
                handleKeydown(event) {
                    if (event.key === 'ArrowUp') {
                        event.preventDefault();
                        if (this.historyIndex < this.commandHistory.length - 1) {
                            this.historyIndex++;
                            this.command = this.commandHistory[this.commandHistory.length - 1 - this.historyIndex];
                        }
                    } else if (event.key === 'ArrowDown') {
                        event.preventDefault();
                        if (this.historyIndex > 0) {
                            this.historyIndex--;
                            this.command = this.commandHistory[this.commandHistory.length - 1 - this.historyIndex];
                        } else if (this.historyIndex === 0) {
                            this.historyIndex = -1;
                            this.command = '';
                        }
                    }
                }
            }
        }
    </script>
